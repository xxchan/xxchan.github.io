---

<section class="author-card">
  <header class="author-card__header">
    <img src={author.avatarSrc} alt={author.avatarAlt} loading="lazy" width="96" height="96" class="author-card__avatar" />
    <div>
      <p class="author-card__name">{author.name}</p>
      <p class="author-card__bio">{author.bio}</p>
    </div>
  </header>

  <ul class="author-card__social">
    {socialLinks.map((item) => (
      <li>
        <a href={item.href} aria-label={item.label} rel="nofollow noopener noreferrer">
          <span class="author-card__icon">
            <svg aria-hidden="true" viewBox="0 0 24 24" focusable="false">
              <path fill="currentColor" d={iconPaths[item.icon]} />
            </svg>
          </span>
          <span class="author-card__text">{item.text}</span>
        </a>
      </li>
    ))}
  </ul>
</section>

<style>
  .author-card {
    border-radius: 12px;
    padding: 1.5rem;
    background: transparent;
    width: min(100%, 360px);
    margin: 0 0 1.5rem;
  }

  .author-card__header {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  .author-card__avatar {
    border-radius: 50%;
    object-fit: cover;
  }

  .author-card__name {
    margin: 0;
    font-size: 1.2rem;
    font-weight: 600;
    color: #1f2a44;
  }

  .author-card__bio {
    margin: 0.25rem 0 0;
    color: #4a5670;
    font-size: 0.95rem;
  }

  .author-card__social {
    margin: 1.25rem 0 0;
    padding: 0;
    list-style: none;
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .author-card__social li {
    flex: none;
  }

  .author-card__social a {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    padding: 0.5rem 0.75rem;
    border-radius: 999px;
    border: 1px solid #ccd3ea;
    background: #fff;
    color: #1f2a44;
    font-weight: 600;
    font-size: 0.9rem;
    text-decoration: none;
    transition: border-color 0.2s ease, color 0.2s ease, background 0.2s ease;
  }

  .author-card__social a:hover,
  .author-card__social a:focus-visible {
    border-color: #2f5bff;
    color: #2f5bff;
    background: #f1f4ff;
  }

  .author-card__icon {
    display: inline-flex;
    width: 1rem;
    height: 1rem;
  }

  .author-card__icon svg {
    width: 100%;
    height: 100%;
  }

  .author-card__text {
    line-height: 1;
  }
</style>
