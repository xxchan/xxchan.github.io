---
type Props = {
  summary?: string;
  generatedAt?: string;
  class?: string;
  defaultOpen?: boolean;
};

const {
  summary,
  generatedAt,
  class: className,
  defaultOpen = false,
} = Astro.props satisfies Props;

const hasSummarySlot = Astro.slots.has("default");
const summaryParagraphs = (
  hasSummarySlot ? "" : (summary ?? "还没有可用的摘要。")
)
  .split(/\n{2,}/)
  .map((paragraph) => paragraph.trim())
  .filter((paragraph) => paragraph.length > 0);

const generatedTime = generatedAt ? new Date(generatedAt) : undefined;
const humanTime =
  generatedTime && !Number.isNaN(generatedTime.getTime())
    ? new Intl.DateTimeFormat("en-US", {
        dateStyle: "medium",
        timeStyle: "short",
      }).format(generatedTime)
    : undefined;
const hostClassName = ["llm-summary", className].filter(Boolean).join(" ");
const commandText = 'kimi --yolo -c "Generate a summary for <post>."';
---

<details class={hostClassName} aria-live="polite" open={defaultOpen}>
  <summary class="llm-summary__summary">
    <div class="llm-summary__header">
      <p class="llm-summary__eyebrow">TL;DR (LLM Summary)</p>
    </div>
    <span class="llm-summary__chevron" aria-hidden="true"></span>
  </summary>
  <div class="llm-summary__panel">
    <div class="llm-summary__body">
      {
        hasSummarySlot ? (
          <slot />
        ) : (
          summaryParagraphs.map((paragraph) => (
            <p class="llm-summary__text">{paragraph}</p>
          ))
        )
      }
    </div>
    <footer class="llm-summary__footer">
      <small>
        Generated by <a href="https://github.com/MoonshotAI/kimi-cli"
          >Kimi CLI</a
        > (kimi-k2-thinking-turbo)
      </small>
      <br />
      <small><code>{commandText}</code></small>
    </footer>
  </div>
</details>

<style>
  .llm-summary {
    border-radius: 1rem;
    border: 1px solid rgba(15, 23, 42, 0.1);
    background: radial-gradient(
        circle at top left,
        rgba(129, 140, 248, 0.15),
        transparent 70%
      ),
      #fff;
    padding: 0;
    box-shadow: 0 15px 45px rgba(15, 23, 42, 0.08);
    overflow: hidden;
  }

  .llm-summary__summary {
    list-style: none;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    padding: 1.25rem 1.5rem;
    cursor: pointer;
  }

  .llm-summary__summary::-webkit-details-marker {
    display: none;
  }

  .llm-summary__header {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .llm-summary__eyebrow {
    margin: 0;
    font-size: 0.75rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: rgba(15, 23, 42, 0.6);
  }

  .llm-summary__header h3 {
    margin: 0;
    font-size: 1.2rem;
    color: #0f172a;
  }

  .llm-summary__chevron {
    width: 1rem;
    height: 1rem;
    border-right: 2px solid rgba(15, 23, 42, 0.6);
    border-bottom: 2px solid rgba(15, 23, 42, 0.6);
    transform: rotate(-45deg);
    transition: transform 0.2s ease;
  }

  .llm-summary[open] .llm-summary__chevron {
    transform: rotate(45deg);
  }

  .llm-summary__panel {
    padding: 0 1.5rem 1.5rem;
  }

  .llm-summary__text {
    margin: 0 0 0.75rem;
    color: rgba(15, 23, 42, 0.86);
    line-height: 1.6;
  }

  .llm-summary__text:last-child {
    margin-bottom: 0;
  }

  .llm-summary__body :global(p) {
    margin: 0 0 0.75rem;
    color: rgba(15, 23, 42, 0.86);
    line-height: 1.6;
  }

  .llm-summary__body :global(p:last-child) {
    margin-bottom: 0;
  }

  .llm-summary__footer {
    margin-top: 1rem;
    padding-top: 0.75rem;
    border-top: 1px dashed rgba(15, 23, 42, 0.2);
  }

  .llm-summary__footer small {
    color: rgba(15, 23, 42, 0.6);
    font-size: 0.85rem;
  }

  .llm-summary__footer code {
    font-size: 0.85rem;
    background: rgba(15, 23, 42, 0.05);
    padding: 0.1rem 0.3rem;
    border-radius: 0.35rem;
  }
</style>
